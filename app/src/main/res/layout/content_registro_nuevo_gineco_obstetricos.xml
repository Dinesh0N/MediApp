<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_registro_nuevo_gineco_obstetricos"
    tools:context=".RegistroNuevoGinecoObstetricos">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView6" >

        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Llene los campos con la informacion de la paciente"
                android:id="@+id/textView25" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="**Seccion exclusiva para pacientes de sexo femenino"
                android:id="@+id/textView26"
                android:textColor="#ff0000"
                android:layout_marginBottom="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Edad de la primer menstruacion"
                android:id="@+id/textView27"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Menarquia"
                android:id="@+id/textView28"
                android:textColor="#ff0000" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerGinecoMenarquia"
                style="@style/estiloTextEdit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Ritmo"
                android:id="@+id/textView29"
                android:textColor="#000000"
                android:layout_marginTop="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Duracion del periodo menstrual"
                android:id="@+id/textView30"
                android:textColor="#ff0000" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerGinecoRitmo"
                style="@style/estiloTextEdit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Fecha de la ultima menstruacion"
                android:id="@+id/textView31"
                android:textColor="#000000"
                android:layout_marginTop="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Importante"
                android:id="@+id/textView32"
                android:textColor="#ff0000" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtGinecoUltimaMenstru"
                style="@style/estiloTextEdit"
                android:hint="Seleccionar Fecha" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Embarazos"
                android:id="@+id/textView33"
                android:textColor="#000000"
                android:layout_marginTop="15dp" />

            <Spinner
                style="@style/estiloTextEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerGinecoEmbarazos" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Abortos"
                android:id="@+id/textView34"
                android:textColor="#000000"
                android:layout_marginTop="15dp" />

            <Spinner
                style="@style/estiloTextEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerGinecoAbortos" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Partos"
                android:id="@+id/textView35"
                android:textColor="#000000"
                android:layout_marginTop="15dp" />

            <Spinner
                style="@style/estiloTextEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerGinecoPartos" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Cesareas"
                android:id="@+id/textView36"
                android:textColor="#000000"
                android:layout_marginTop="15dp" />

            <Spinner
                style="@style/estiloTextEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerGinecoCesareas" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/txtGinecoAnticonceptivos"
                style="@style/estiloTextEditMulti"
                android:hint="Anticonceptivos" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/txtGinecoDescripcion"
                style="@style/estiloTextEditMulti"
                android:hint="Descripcion" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/txtGinecoHormonales"
                style="@style/estiloTextEditMulti"
                android:hint="Problemas Hormonales" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardar"
                android:id="@+id/btnGinecoGuardar"
                style="@style/btnLargoVerde" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>

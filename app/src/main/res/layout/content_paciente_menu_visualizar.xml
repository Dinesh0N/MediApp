<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.qiqeapps.mediapp.PacienteMenuVisualizar"
    tools:showIn="@layout/activity_paciente_menu_visualizar">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView16">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:rowCount="8">

            <ImageButton
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:id="@+id/pacienteBtnResumen"
                android:layout_column="0"
                android:layout_row="0"
                android:src="@mipmap/identificacion"
                android:scaleType="fitCenter"
                android:background="#00ffffff"
                style="@style/estiloBotonesMenuPpal"
                android:onClick="PacientevisualizarInfoGral" />

            <ImageButton
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:id="@+id/pacienteBtnPatologico"
                android:src="@mipmap/patologico"
                style="@style/estiloBotonesMenuPpal"
                android:onClick="PacientevisualizarPatoglogicos"
                android:layout_column="1"
                android:layout_row="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:text="Resumen General"
                android:id="@+id/textView8"
                android:layout_gravity="center_horizontal"
                android:layout_column="0"
                android:layout_row="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:text="Hist. Patologicos"
                android:id="@+id/textView9"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="center_horizontal" />

            <ImageButton
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:id="@+id/pacienteBtnNoPatologico"
                android:src="@mipmap/no_patologico"
                style="@style/estiloBotonesMenuPpal"
                android:onClick="PacientevisualizarNOPatoglogicos"
                android:layout_column="0"
                android:layout_row="2" />

            <ImageButton
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:id="@+id/pacienteBtnFamiliares"
                android:layout_row="2"
                android:layout_column="1"
                style="@style/estiloBotonesMenuPpal"
                android:src="@mipmap/familiares"
                android:onClick="PacientevisualizarFamiliares" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:text="Hist. No Patologicos"
                android:id="@+id/textView10"
                android:layout_gravity="center_horizontal"
                android:layout_column="0"
                android:layout_row="3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:text="Hist. Familiares"
                android:id="@+id/textView11"
                android:layout_gravity="center_horizontal"
                android:layout_column="1"
                android:layout_row="3" />

            <ImageButton
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:id="@+id/pacienteBtnGineco"
                style="@style/estiloBotonesMenuPpal"
                android:src="@mipmap/gineco"
                android:layout_column="0"
                android:layout_row="4"
                android:onClick="PacientevisualizarGineco" />

            <ImageButton
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:id="@+id/pacienteBtnFisica"
                style="@style/estiloBotonesMenuPpal"
                android:src="@mipmap/exploracion_fisica"
                android:layout_column="1"
                android:layout_row="4"
                android:onClick="PacientevisualizarFisica" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:text="Hist. Gineco"
                android:id="@+id/textView12"
                android:layout_gravity="center_horizontal"
                android:password="false"
                android:layout_column="0"
                android:layout_row="5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:text="Historial FÃ­sico"
                android:id="@+id/textView13"
                android:layout_gravity="center_horizontal"
                android:layout_column="1"
                android:layout_row="5" />

            <ImageButton
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:id="@+id/pacienteBtnConsultas"
                style="@style/estiloBotonesMenuPpal"
                android:src="@mipmap/consultas"
                android:layout_column="0"
                android:layout_row="6"
                android:onClick="PacientevisualizarConsultas" />

            <ImageButton
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:id="@+id/pacienteBtnClinicos"
                style="@style/estiloBotonesMenuPpal"
                android:src="@mipmap/estudios"
                android:layout_column="1"
                android:layout_row="6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:text="Historial Consultas"
                android:id="@+id/textView14"
                android:layout_gravity="center_horizontal"
                android:layout_column="0"
                android:layout_row="7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:text="Historial Clinico"
                android:id="@+id/textView15"
                android:layout_gravity="center_horizontal"
                android:layout_column="1"
                android:layout_row="7" />

        </GridLayout>

    </ScrollView>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_menu_doctor" tools:context="com.qiqeapps.mediapp.MenuDoctor"
    style="@style/fondoApp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2" >

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:rowCount="10">

            <ImageButton
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:id="@+id/medBtnRegistro"
                android:layout_column="0"
                android:layout_row="0"
                android:src="@mipmap/identificacion"
                android:scaleType="fitCenter"
                android:background="#00ffffff"
                style="@style/estiloBotonesMenuPpal"
                android:onClick="btnRegistro" />

            <ImageButton
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:id="@+id/medBtnPatologico"
                android:src="@mipmap/patologico"
                style="@style/estiloBotonesMenuPpal"
                android:onClick="btnPatologico" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Registrar Paciente"
                android:id="@+id/textView8"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Patologicos"
                android:id="@+id/textView9"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="center_horizontal" />

            <ImageButton
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:id="@+id/medBtnNoPatolog"
                android:src="@mipmap/no_patologico"
                style="@style/estiloBotonesMenuPpal" />

            <ImageButton
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:id="@+id/medBtnFamiliares"
                android:layout_row="2"
                android:layout_column="1"
                style="@style/estiloBotonesMenuPpal"
                android:src="@mipmap/familiares" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="No Patologicos"
                android:id="@+id/textView10"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Familiares"
                android:id="@+id/textView11"
                android:layout_gravity="center_horizontal" />

            <ImageButton
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:id="@+id/medBtnGineco"
                style="@style/estiloBotonesMenuPpal"
                android:src="@mipmap/gineco" />

            <ImageButton
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:id="@+id/medBtnFisica"
                style="@style/estiloBotonesMenuPpal"
                android:src="@mipmap/exploracion_fisica" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Gineco"
                android:id="@+id/textView12"
                android:layout_gravity="center_horizontal"
                android:password="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="E-Fisica"
                android:id="@+id/textView13"
                android:layout_gravity="center_horizontal" />

            <ImageButton
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:id="@+id/medBtnConsultas"
                style="@style/estiloBotonesMenuPpal"
                android:src="@mipmap/consultas" />

            <ImageButton
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:id="@+id/medBtnClinicos"
                style="@style/estiloBotonesMenuPpal"
                android:src="@mipmap/estudios" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Consultas"
                android:id="@+id/textView14"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="E-Clinicos"
                android:id="@+id/textView15"
                android:layout_gravity="center_horizontal" />

            <ImageButton
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:id="@+id/medBtnRecetas"
                style="@style/estiloBotonesMenuPpal"
                android:src="@mipmap/receta" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Recetas"
                android:id="@+id/textView16"
                android:layout_row="9"
                android:layout_column="0"
                android:layout_gravity="center_horizontal" />
        </GridLayout>
    </ScrollView>
</LinearLayout>
